<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/darkgreen">

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:src="@drawable/selectable_menu_button"
            android:scaleType="centerInside"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="HaHaWestern"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/title_bar">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/option_section_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.kejuntong.hahawestern.CustomViews.SelectableImageButton
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:padding="30dp"
                    android:src="@drawable/carpool"
                    android:scaleType="centerInside"
                    android:background="@color/transparent"
                    android:layout_weight="1"/>

                <com.kejuntong.hahawestern.CustomViews.SelectableImageButton
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:padding="30dp"
                    android:src="@drawable/zufang"
                    android:scaleType="centerInside"
                    android:background="@color/transparent"
                    android:layout_weight="1"/>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/option_section_1"
                android:background="@color/transparent_black_percent_20"/>

            <RelativeLayout
                android:id="@+id/divider_vertical"
                android:layout_width="1dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent_black_percent_20"/>

            <LinearLayout
                android:id="@+id/option_section_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/divider_horizontal">

                <com.kejuntong.hahawestern.CustomViews.SelectableImageButton
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:padding="30dp"
                    android:src="@drawable/ershouhuo"
                    android:scaleType="centerInside"
                    android:background="@color/transparent"
                    android:layout_weight="1"/>

                <com.kejuntong.hahawestern.CustomViews.SelectableImageButton
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:padding="30dp"
                    android:src="@drawable/jiaoyou"
                    android:scaleType="centerInside"
                    android:background="@color/transparent"
                    android:layout_weight="1"/>


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
